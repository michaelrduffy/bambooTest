extends layout

block content
  div(class='container-fluid')
    div(class='row')
      div(class='col')
        h1 Sign In
        hr
        input(id='username' type='text' name='username' placeholder='Username')
        br
        input(id='password' type='password' name='password' placeholder='Password')
        hr
        button(class='btn btn-primary' id='signInButton') Sign In
        hr
        button(class='btn btn-secondary' id='createAccountButton') Create Account
